<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h4 class="mb-1">Catálogo de Áreas</h4>
    <p class="text-muted mb-0">Administra las áreas de la organización</p>
  </div>
  <a href="/areas/crear" class="btn btn-primary">
    <i class="bi bi-folder-plus me-2"></i>
    Nueva Área
  </a>
</div>

<!-- Tabla de Áreas -->
<div class="card">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>ID</th>
            <th>Nombre del Área</th>
            <th>Tipo</th>
            <th>Descripción</th>
            <th class="text-center">Empleados</th>
            <th class="text-center">Puestos</th>
            <th class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (areas && areas.length > 0) { %>
            <% areas.forEach(function(area) { %>
            <tr>
              <td><strong>#<%= area.ID_Area %></strong></td>
              <td>
                <i class="bi bi-diagram-3 text-primary me-2"></i>
                <strong><%= area.Nombre_Area %></strong>
              </td>
              <td>
                <span class="badge bg-secondary"><%= area.Tipo_Area || 'Sin tipo' %></span>
              </td>
              <td><%= area.Descripcion || '-' %></td>
              <td class="text-center">
                <span class="badge bg-info"><%= area._count.empleados %></span>
              </td>
              <td class="text-center">
                <span class="badge bg-success"><%= area._count.puestos %></span>
              </td>
              <td class="text-end">
                <a href="/areas/<%= area.ID_Area %>/editar" class="btn btn-sm btn-outline-primary" title="Editar">
                  <i class="bi bi-pencil"></i>
                </a>
                <% if (area._count.empleados === 0 && area._count.puestos === 0) { %>
                <form action="/areas/<%= area.ID_Area %>/eliminar" method="POST" class="d-inline"
                      onsubmit="return confirm('¿Eliminar esta área?')">
                  <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar">
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
                <% } %>
              </td>
            </tr>
            <% }); %>
          <% } else { %>
            <tr><td colspan="7" class="text-center text-muted py-4">No hay áreas registradas</td></tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

