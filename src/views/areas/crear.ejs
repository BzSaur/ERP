<!-- Header -->
<div class="mb-4">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb mb-1">
      <li class="breadcrumb-item"><a href="/areas">Áreas</a></li>
      <li class="breadcrumb-item active">Nueva</li>
    </ol>
  </nav>
  <h4 class="mb-0">Crear Nueva Área</h4>
</div>

<!-- Formulario -->
<div class="row">
  <div class="col-lg-6">
    <div class="card">
      <div class="card-body">
        <form action="/areas" method="POST">
          <div class="mb-3">
            <label class="form-label">Nombre del Área <span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="Nombre_Area" required 
                   placeholder="Ej: PRODUCCIÓN, VENTAS, etc.">
            <small class="text-muted">El nombre se guardará en mayúsculas</small>
          </div>
          
          <div class="mb-3">
            <label class="form-label">Tipo de Área</label>
            <select class="form-select" name="Tipo_Area">
              <option value="">Seleccionar...</option>
              <option value="PRODUCCION">Producción</option>
              <option value="ADMINISTRATIVO">Administrativo</option>
              <option value="COMERCIAL">Comercial</option>
              <option value="OPERACIONES">Operaciones</option>
              <option value="SISTEMAS">Sistemas</option>
              <option value="OTRO">Otro</option>
            </select>
          </div>
          
          <div class="mb-4">
            <label class="form-label">Descripción</label>
            <textarea class="form-control" name="Descripcion" rows="3" 
                      placeholder="Descripción opcional del área..."></textarea>
          </div>
          
          <div class="d-flex gap-2">
            <a href="/areas" class="btn btn-outline-secondary">
              <i class="bi bi-x-lg me-1"></i> Cancelar
            </a>
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-check-lg me-1"></i> Guardar Área
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

