<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Nueva Nacionalidad</h2>
    <p class="text-muted mb-0">Agregar una nueva nacionalidad al catálogo</p>
  </div>
  <a href="/nacionalidades" class="btn btn-outline-secondary">
    <i class="bi bi-arrow-left me-1"></i> Volver
  </a>
</div>

<% if (typeof messages !== 'undefined' && messages.error) { %>
  <div class="alert alert-danger alert-dismissible fade show">
    <i class="bi bi-exclamation-circle me-2"></i><%= messages.error %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>

<div class="card">
  <div class="card-body">
    <form action="/nacionalidades" method="POST">
      <div class="row g-3">
        <div class="col-md-6">
          <label for="Nombre_Nacionalidad" class="form-label">Nombre de la Nacionalidad *</label>
          <input type="text" class="form-control" id="Nombre_Nacionalidad" 
                 name="Nombre_Nacionalidad" required maxlength="50"
                 placeholder="Ej: Mexicana">
        </div>
        
        <div class="col-md-3">
          <label for="Codigo_ISO2" class="form-label">Código ISO2</label>
          <input type="text" class="form-control" id="Codigo_ISO2" 
                 name="Codigo_ISO2" maxlength="2" style="text-transform: uppercase;"
                 placeholder="MX">
          <div class="form-text">Código de 2 letras (Ej: MX, US)</div>
        </div>
        
        <div class="col-md-3">
          <label for="Codigo_ISO3" class="form-label">Código ISO3</label>
          <input type="text" class="form-control" id="Codigo_ISO3" 
                 name="Codigo_ISO3" maxlength="3" style="text-transform: uppercase;"
                 placeholder="MEX">
          <div class="form-text">Código de 3 letras (Ej: MEX, USA)</div>
        </div>
      </div>
      
      <hr class="my-4">
      
      <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">
          <i class="bi bi-check-lg me-1"></i> Guardar
        </button>
        <a href="/nacionalidades" class="btn btn-outline-secondary">Cancelar</a>
      </div>
    </form>
  </div>
</div>
