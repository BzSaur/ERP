<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Nacionalidades</h2>
    <p class="text-muted mb-0">Catálogo de nacionalidades del sistema</p>
  </div>
  <a href="/nacionalidades/crear" class="btn btn-primary">
    <i class="bi bi-plus-lg me-1"></i> Nueva Nacionalidad
  </a>
</div>

<% if (typeof messages !== 'undefined') { %>
  <% if (messages.success) { %>
    <div class="alert alert-success alert-dismissible fade show">
      <i class="bi bi-check-circle me-2"></i><%= messages.success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  <% if (messages.error) { %>
    <div class="alert alert-danger alert-dismissible fade show">
      <i class="bi bi-exclamation-circle me-2"></i><%= messages.error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
<% } %>

<div class="card">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nacionalidad</th>
            <th>ISO2</th>
            <th>ISO3</th>
            <th class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (nacionalidades.length === 0) { %>
            <tr>
              <td colspan="5" class="text-center py-4 text-muted">
                <i class="bi bi-globe fs-1 d-block mb-2"></i>
                No hay nacionalidades registradas
              </td>
            </tr>
          <% } else { %>
            <% nacionalidades.forEach(nac => { %>
              <tr>
                <td><%= nac.ID_Nacionalidad %></td>
                <td><strong><%= nac.Nombre_Nacionalidad %></strong></td>
                <td><%= nac.Codigo_ISO2 || '-' %></td>
                <td><%= nac.Codigo_ISO3 || '-' %></td>
                <td class="text-end">
                  <a href="/nacionalidades/<%= nac.ID_Nacionalidad %>/editar" 
                     class="btn btn-sm btn-outline-primary" title="Editar">
                    <i class="bi bi-pencil"></i>
                  </a>
                  <form action="/nacionalidades/<%= nac.ID_Nacionalidad %>?_method=DELETE" 
                        method="POST" class="d-inline" 
                        data-confirm="¿Eliminar esta nacionalidad?">
                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
