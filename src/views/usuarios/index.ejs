<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1"><i class="bi bi-people-fill me-2"></i>Usuarios del Sistema</h2>
    <p class="text-muted mb-0">Gestión de accesos y permisos</p>
  </div>
  <a href="/usuarios/crear" class="btn btn-primary">
    <i class="bi bi-person-plus me-1"></i> Nuevo Usuario
  </a>
</div>

<% if (typeof success !== 'undefined' && success) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <i class="bi bi-check-circle me-2"></i><%= success %>
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<% } %>

<% if (typeof error !== 'undefined' && error) { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <i class="bi bi-exclamation-triangle me-2"></i><%= error %>
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<% } %>

<!-- Estadísticas rápidas -->
<div class="row g-3 mb-4">
  <div class="col-md-3">
    <div class="card bg-primary text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="mb-0">Total Usuarios</h6>
            <h3 class="mb-0"><%= usuarios.length %></h3>
          </div>
          <i class="bi bi-people fs-1 opacity-50"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-success text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="mb-0">Activos</h6>
            <h3 class="mb-0"><%= usuarios.filter(u => u.Activo).length %></h3>
          </div>
          <i class="bi bi-person-check fs-1 opacity-50"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-danger text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="mb-0">Inactivos</h6>
            <h3 class="mb-0"><%= usuarios.filter(u => !u.Activo).length %></h3>
          </div>
          <i class="bi bi-person-x fs-1 opacity-50"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-3">
    <div class="card bg-info text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="mb-0">Roles</h6>
            <h3 class="mb-0"><%= roles.length %></h3>
          </div>
          <i class="bi bi-shield-lock fs-1 opacity-50"></i>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Tabla de usuarios -->
<div class="card">
  <div class="card-header">
    <h5 class="card-title mb-0">
      <i class="bi bi-table me-2"></i>Lista de Usuarios
    </h5>
  </div>
  <div class="table-responsive">
    <table class="table table-hover mb-0">
      <thead class="table-light">
        <tr>
          <th>Usuario</th>
          <th>Correo Electrónico</th>
          <th>Rol</th>
          <th>Empleado Vinculado</th>
          <th>Último Acceso</th>
          <th>Estado</th>
          <th class="text-end">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if (usuarios && usuarios.length > 0) { %>
          <% usuarios.forEach(function(usr) { %>
            <tr>
              <td>
                <div class="d-flex align-items-center">
                  <div class="avatar-circle me-2 <%= usr.Activo ? 'bg-primary' : 'bg-secondary' %>">
                    <%= usr.Nombre_Completo ? usr.Nombre_Completo.charAt(0).toUpperCase() : '?' %>
                  </div>
                  <div>
                    <strong><%= usr.Nombre_Completo %></strong>
                    <% if (user && user.ID_Usuario === usr.ID_Usuario) { %>
                      <span class="badge bg-info ms-1">Tú</span>
                    <% } %>
                  </div>
                </div>
              </td>
              <td><%= usr.Email_Office365 %></td>
              <td>
                <% if (usr.rol) { %>
                  <% if (usr.rol.Nombre_Rol === 'SUPERADMIN') { %>
                    <span class="badge bg-danger"><i class="bi bi-shield-fill-check me-1"></i><%= usr.rol.Nombre_Rol %></span>
                  <% } else if (usr.rol.Nombre_Rol === 'ADMIN') { %>
                    <span class="badge bg-warning text-dark"><i class="bi bi-shield-fill me-1"></i><%= usr.rol.Nombre_Rol %></span>
                  <% } else { %>
                    <span class="badge bg-secondary"><%= usr.rol.Nombre_Rol %></span>
                  <% } %>
                <% } else { %>
                  <span class="text-muted">-</span>
                <% } %>
              </td>
              <td>
                <% if (usr.empleado) { %>
                  <a href="/empleados/<%= usr.empleado.ID_Empleado %>" class="text-decoration-none">
                    <i class="bi bi-person-badge me-1"></i>
                    <%= usr.empleado.Nombre %> <%= usr.empleado.Apellido_Paterno %>
                  </a>
                <% } else { %>
                  <span class="text-muted">No vinculado</span>
                <% } %>
              </td>
              <td>
                <% if (usr.Ultimo_Acceso) { %>
                  <small><%= new Date(usr.Ultimo_Acceso).toLocaleString('es-MX') %></small>
                <% } else { %>
                  <span class="text-muted">Nunca</span>
                <% } %>
              </td>
              <td>
                <% if (usr.Activo) { %>
                  <span class="badge bg-success">Activo</span>
                <% } else { %>
                  <span class="badge bg-danger">Inactivo</span>
                <% } %>
              </td>
              <td class="text-end">
                <a href="/usuarios/<%= usr.ID_Usuario %>/editar" class="btn btn-sm btn-outline-primary" title="Editar">
                  <i class="bi bi-pencil"></i>
                </a>
                <% if (!user || user.ID_Usuario !== usr.ID_Usuario) { %>
                  <form action="/usuarios/<%= usr.ID_Usuario %>/toggle-activo" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm <%= usr.Activo ? 'btn-outline-warning' : 'btn-outline-success' %>" 
                            title="<%= usr.Activo ? 'Desactivar' : 'Activar' %>">
                      <i class="bi <%= usr.Activo ? 'bi-person-x' : 'bi-person-check' %>"></i>
                    </button>
                  </form>
                  <form action="/usuarios/<%= usr.ID_Usuario %>/eliminar" method="POST" class="d-inline"
                        onsubmit="return confirm('¿Estás seguro de eliminar este usuario?')">
                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar">
                      <i class="bi bi-trash"></i>
                    </button>
                  </form>
                <% } %>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="7" class="text-center text-muted py-4">
              No hay usuarios registrados
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<style>
.avatar-circle {
  width: 36px;
  height: 36px;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 0.85rem;
}
</style>
