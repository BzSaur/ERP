<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1"><i class="bi bi-calendar3 me-2"></i>Periodos de Nómina</h2>
    <p class="text-muted mb-0">Gestión de periodos de pago</p>
  </div>
  <div class="d-flex gap-2">
    <a href="/nomina/periodos/crear" class="btn btn-primary">
      <i class="bi bi-plus-lg me-1"></i> Nuevo Periodo
    </a>
    <a href="/nomina" class="btn btn-outline-secondary">
      <i class="bi bi-arrow-left me-1"></i> Dashboard
    </a>
  </div>
</div>

<% if (typeof messages !== 'undefined') { %>
  <% if (messages.success) { %>
    <div class="alert alert-success alert-dismissible fade show">
      <i class="bi bi-check-circle me-2"></i><%= messages.success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  <% if (messages.error) { %>
    <div class="alert alert-danger alert-dismissible fade show">
      <i class="bi bi-exclamation-circle me-2"></i><%= messages.error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
<% } %>

<!-- Estadísticas -->
<div class="row g-3 mb-4">
  <div class="col-md-4">
    <div class="card stat-card bg-warning">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <div class="stat-label">Pendientes</div>
            <div class="stat-value"><%= stats.pendientes %></div>
          </div>
          <i class="bi bi-hourglass-split stat-icon"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card stat-card bg-info">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <div class="stat-label">Procesando</div>
            <div class="stat-value"><%= stats.procesando %></div>
          </div>
          <i class="bi bi-gear stat-icon"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card stat-card bg-success">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <div class="stat-label">Cerrados</div>
            <div class="stat-value"><%= stats.cerrados %></div>
          </div>
          <i class="bi bi-check-circle stat-icon"></i>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Filtros -->
<div class="card mb-4">
  <div class="card-body">
    <form action="/nomina/periodos" method="GET" class="row g-3 align-items-end">
      <div class="col-md-3">
        <label for="anio" class="form-label">Año</label>
        <select class="form-select" id="anio" name="anio">
          <option value="">Todos</option>
          <% for (let y = new Date().getFullYear(); y >= 2020; y--) { %>
            <option value="<%= y %>" <%= filtros.anio == y ? 'selected' : '' %>><%= y %></option>
          <% } %>
        </select>
      </div>
      <div class="col-md-3">
        <label for="estado" class="form-label">Estado</label>
        <select class="form-select" id="estado" name="estado">
          <option value="">Todos</option>
          <option value="PENDIENTE" <%= filtros.estado === 'PENDIENTE' ? 'selected' : '' %>>Pendiente</option>
          <option value="PROCESANDO" <%= filtros.estado === 'PROCESANDO' ? 'selected' : '' %>>Procesando</option>
          <option value="CERRADO" <%= filtros.estado === 'CERRADO' ? 'selected' : '' %>>Cerrado</option>
        </select>
      </div>
      <div class="col-md-6">
        <button type="submit" class="btn btn-primary me-2">
          <i class="bi bi-search me-1"></i> Filtrar
        </button>
        <a href="/nomina/periodos" class="btn btn-outline-secondary">Limpiar</a>
      </div>
    </form>
  </div>
</div>

<!-- Tabla -->
<div class="card">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th>Periodo</th>
            <th>Tipo</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Fecha Pago</th>
            <th>Días</th>
            <th>Estado</th>
            <th class="text-end">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% if (periodos.length === 0) { %>
            <tr>
              <td colspan="8" class="text-center py-4 text-muted">
                <i class="bi bi-calendar-x fs-1 d-block mb-2"></i>
                No hay periodos de nómina registrados
              </td>
            </tr>
          <% } else { %>
            <% periodos.forEach(p => { %>
              <tr>
                <td><strong><%= p.Nombre_Periodo %></strong></td>
                <td>
                  <% if (p.Tipo_Periodo === 'QUINCENAL') { %>
                    <span class="badge bg-primary">Quincenal</span>
                  <% } else if (p.Tipo_Periodo === 'SEMANAL') { %>
                    <span class="badge bg-info">Semanal</span>
                  <% } else { %>
                    <span class="badge bg-secondary">Mensual</span>
                  <% } %>
                </td>
                <td><%= p.Fecha_Inicio.toLocaleDateString('es-MX') %></td>
                <td><%= p.Fecha_Fin.toLocaleDateString('es-MX') %></td>
                <td><%= p.Fecha_Pago.toLocaleDateString('es-MX') %></td>
                <td><%= p.Dias_Periodo %></td>
                <td>
                  <% if (p.Estado === 'PENDIENTE') { %>
                    <span class="badge bg-warning text-dark">Pendiente</span>
                  <% } else if (p.Estado === 'PROCESANDO') { %>
                    <span class="badge bg-info">Procesando</span>
                  <% } else { %>
                    <span class="badge bg-success">Cerrado</span>
                  <% } %>
                </td>
                <td class="text-end">
                  <a href="/nomina/periodos/<%= p.ID_Periodo %>" class="btn btn-sm btn-outline-primary" title="Ver detalle">
                    <i class="bi bi-eye"></i>
                  </a>
                  <% if (p.Estado !== 'CERRADO') { %>
                    <form action="/nomina/periodos/<%= p.ID_Periodo %>/calcular" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-sm btn-outline-success" title="Calcular nómina">
                        <i class="bi bi-calculator"></i>
                      </button>
                    </form>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
