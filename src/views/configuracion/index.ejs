<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Configuración del Sistema</h2>
    <p class="text-muted mb-0">Panel de administración para SuperAdministrador</p>
  </div>
</div>

<% if (typeof messages !== 'undefined') { %>
  <% if (messages.success) { %>
    <div class="alert alert-success alert-dismissible fade show">
      <i class="bi bi-check-circle me-2"></i><%= messages.success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  <% if (messages.error) { %>
    <div class="alert alert-danger alert-dismissible fade show">
      <i class="bi bi-exclamation-circle me-2"></i><%= messages.error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
<% } %>

<!-- Estadísticas del Sistema -->
<div class="row g-3 mb-4">
  <div class="col-6 col-md-3">
    <div class="card">
      <div class="card-body text-center">
        <i class="bi bi-people text-primary fs-2"></i>
        <h3 class="mb-0 mt-2"><%= stats.totalEmpleados %></h3>
        <small class="text-muted">Empleados</small>
      </div>
    </div>
  </div>
  <div class="col-6 col-md-3">
    <div class="card">
      <div class="card-body text-center">
        <i class="bi bi-person-gear text-info fs-2"></i>
        <h3 class="mb-0 mt-2"><%= stats.totalUsuarios %></h3>
        <small class="text-muted">Usuarios Sistema</small>
      </div>
    </div>
  </div>
  <div class="col-6 col-md-3">
    <div class="card">
      <div class="card-body text-center">
        <i class="bi bi-diagram-3 text-success fs-2"></i>
        <h3 class="mb-0 mt-2"><%= stats.totalAreas %></h3>
        <small class="text-muted">Áreas</small>
      </div>
    </div>
  </div>
  <div class="col-6 col-md-3">
    <div class="card">
      <div class="card-body text-center">
        <i class="bi bi-briefcase text-warning fs-2"></i>
        <h3 class="mb-0 mt-2"><%= stats.totalPuestos %></h3>
        <small class="text-muted">Puestos</small>
      </div>
    </div>
  </div>
</div>

<!-- Opciones de Configuración -->
<div class="row g-4">
  <div class="col-md-6">
    <div class="card h-100">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <i class="bi bi-shield-lock me-2"></i>Roles del Sistema
        </h5>
      </div>
      <div class="card-body">
        <p class="text-muted">Gestiona los roles y permisos de los usuarios del sistema.</p>
        <ul class="list-unstyled">
          <% roles.forEach(rol => { %>
            <li class="d-flex align-items-center mb-2">
              <i class="bi bi-check-circle text-success me-2"></i>
              <strong><%= rol.Nombre_Rol %></strong>
              <% if (rol.Descripcion) { %>
                <small class="text-muted ms-2">- <%= rol.Descripcion %></small>
              <% } %>
            </li>
          <% }) %>
        </ul>
      </div>
      <div class="card-footer">
        <a href="/configuracion/roles" class="btn btn-outline-primary">
          <i class="bi bi-gear me-1"></i> Gestionar Roles
        </a>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card h-100">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <i class="bi bi-toggle-on me-2"></i>Estatus de Empleados
        </h5>
      </div>
      <div class="card-body">
        <p class="text-muted">Define los estados posibles de los empleados.</p>
        <ul class="list-unstyled">
          <% estatusEmpleado.forEach(est => { %>
            <li class="d-flex align-items-center mb-2">
              <i class="bi bi-circle-fill text-<%= est.Nombre_Estatus === 'Activo' ? 'success' : 'secondary' %> me-2" style="font-size: 0.5rem;"></i>
              <strong><%= est.Nombre_Estatus %></strong>
              <% if (est.Descripcion) { %>
                <small class="text-muted ms-2">- <%= est.Descripcion %></small>
              <% } %>
            </li>
          <% }) %>
        </ul>
      </div>
      <div class="card-footer">
        <a href="/configuracion/estatus" class="btn btn-outline-primary">
          <i class="bi bi-gear me-1"></i> Gestionar Estatus
        </a>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card h-100">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <i class="bi bi-journal-text me-2"></i>Bitácora del Sistema
        </h5>
      </div>
      <div class="card-body">
        <p class="text-muted">Consulta el registro de accesos y actividades del sistema.</p>
        <div class="d-flex gap-3">
          <div class="text-center">
            <i class="bi bi-box-arrow-in-right text-success fs-1"></i>
            <p class="mb-0 small">Inicios de sesión</p>
          </div>
          <div class="text-center">
            <i class="bi bi-box-arrow-right text-danger fs-1"></i>
            <p class="mb-0 small">Cierres de sesión</p>
          </div>
          <div class="text-center">
            <i class="bi bi-exclamation-triangle text-warning fs-1"></i>
            <p class="mb-0 small">Intentos fallidos</p>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <a href="/bitacora" class="btn btn-outline-primary">
          <i class="bi bi-list-ul me-1"></i> Ver Bitácora
        </a>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="card h-100">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <i class="bi bi-database me-2"></i>Catálogos del Sistema
        </h5>
      </div>
      <div class="card-body">
        <p class="text-muted">Resumen de los catálogos disponibles.</p>
        <div class="row text-center">
          <div class="col-6 mb-3">
            <strong class="fs-4"><%= stats.totalNacionalidades %></strong>
            <p class="mb-0 small text-muted">Nacionalidades</p>
          </div>
          <div class="col-6 mb-3">
            <strong class="fs-4"><%= stats.totalHorarios %></strong>
            <p class="mb-0 small text-muted">Horarios</p>
          </div>
          <div class="col-6">
            <strong class="fs-4"><%= stats.totalRoles %></strong>
            <p class="mb-0 small text-muted">Roles</p>
          </div>
          <div class="col-6">
            <strong class="fs-4"><%= stats.totalEstatus %></strong>
            <p class="mb-0 small text-muted">Estatus</p>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <a href="/nacionalidades" class="btn btn-outline-secondary btn-sm me-1">Nacionalidades</a>
        <a href="/horarios" class="btn btn-outline-secondary btn-sm">Horarios</a>
      </div>
    </div>
  </div>
</div>
