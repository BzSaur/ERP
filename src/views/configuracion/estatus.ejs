<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h2 class="mb-1">Estatus de Empleados</h2>
    <p class="text-muted mb-0">Administrar estados de empleados</p>
  </div>
  <a href="/configuracion" class="btn btn-outline-secondary">
    <i class="bi bi-arrow-left me-1"></i> Volver
  </a>
</div>

<% if (typeof messages !== 'undefined') { %>
  <% if (messages.success) { %>
    <div class="alert alert-success alert-dismissible fade show">
      <i class="bi bi-check-circle me-2"></i><%= messages.success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  <% if (messages.error) { %>
    <div class="alert alert-danger alert-dismissible fade show">
      <i class="bi bi-exclamation-circle me-2"></i><%= messages.error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
<% } %>

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Estatus Existentes</h5>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead>
              <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Empleados</th>
                <th class="text-end">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% estatusList.forEach(est => { %>
                <tr>
                  <td><%= est.ID_Estatus %></td>
                  <td>
                    <span class="badge bg-<%= est.Nombre_Estatus === 'Activo' ? 'success' : 'secondary' %>">
                      <%= est.Nombre_Estatus %>
                    </span>
                  </td>
                  <td><%= est.Descripcion || '-' %></td>
                  <td><span class="badge bg-info"><%= est._count.empleados %></span></td>
                  <td class="text-end">
                    <button class="btn btn-sm btn-outline-primary" 
                            data-bs-toggle="modal" 
                            data-bs-target="#editarEstatus<%= est.ID_Estatus %>">
                      <i class="bi bi-pencil"></i>
                    </button>
                  </td>
                </tr>
                
                <!-- Modal Editar -->
                <div class="modal fade" id="editarEstatus<%= est.ID_Estatus %>" tabindex="-1">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <form action="/configuracion/estatus/<%= est.ID_Estatus %>?_method=PUT" method="POST">
                        <div class="modal-header">
                          <h5 class="modal-title">Editar Estatus</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                          <div class="mb-3">
                            <label class="form-label">Nombre *</label>
                            <input type="text" class="form-control" name="Nombre_Estatus" 
                                   value="<%= est.Nombre_Estatus %>" required>
                          </div>
                          <div class="mb-3">
                            <label class="form-label">Descripción</label>
                            <textarea class="form-control" name="Descripcion" rows="2"><%= est.Descripcion || '' %></textarea>
                          </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                          <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Nuevo Estatus</h5>
      </div>
      <div class="card-body">
        <form action="/configuracion/estatus" method="POST">
          <div class="mb-3">
            <label class="form-label">Nombre *</label>
            <input type="text" class="form-control" name="Nombre_Estatus" required maxlength="30">
          </div>
          <div class="mb-3">
            <label class="form-label">Descripción</label>
            <textarea class="form-control" name="Descripcion" rows="2" maxlength="255"></textarea>
          </div>
          <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-plus-lg me-1"></i> Crear Estatus
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
