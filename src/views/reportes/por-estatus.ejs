<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-1">
        <li class="breadcrumb-item"><a href="/reportes">Reportes</a></li>
        <li class="breadcrumb-item active">Por Estatus</li>
      </ol>
    </nav>
    <h4 class="mb-0">Reporte de Empleados por Estatus</h4>
  </div>
  <button class="btn btn-outline-primary" onclick="window.print()">
    <i class="bi bi-printer me-2"></i>Imprimir
  </button>
</div>

<!-- Resumen -->
<div class="row g-4 mb-4">
  <% estatuses.forEach(function(estatus) { %>
  <div class="col-md-6 col-lg-2">
    <div class="card">
      <div class="card-body text-center">
        <h5 class="mb-2"><%= estatus.Nombre_Estatus %></h5>
        <h2 class="mb-0 <%= estatus.Nombre_Estatus === 'ACTIVO' ? 'text-success' : 'text-secondary' %>"><%= estatus._count.empleados %></h2>
      </div>
    </div>
  </div>
  <% }); %>
</div>

<!-- Detalle por Estatus -->
<% estatuses.filter(function(e) { return e.empleados.length > 0; }).forEach(function(estatus) { %>
<div class="card mb-4">
  <div class="card-header">
    <h5 class="card-title mb-0">
      <span class="badge <%= estatus.Nombre_Estatus === 'ACTIVO' ? 'bg-success' : 'bg-secondary' %> me-2"><%= estatus.Nombre_Estatus %></span>
      <%= estatus.empleados.length %> empleados
    </h5>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Nombre</th>
            <th>√Årea</th>
            <th>Puesto</th>
          </tr>
        </thead>
        <tbody>
          <% estatus.empleados.forEach(function(emp) { %>
          <tr>
            <td><%= emp.Nombre %> <%= emp.Apellido_Paterno %> <%= emp.Apellido_Materno || '' %></td>
            <td><%= emp.area ? emp.area.Nombre_Area : '-' %></td>
            <td><%= emp.puesto ? emp.puesto.Nombre_Puesto : '-' %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% }); %>
