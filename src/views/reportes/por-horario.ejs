<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb mb-1">
        <li class="breadcrumb-item"><a href="/reportes">Reportes</a></li>
        <li class="breadcrumb-item active">Por Horario</li>
      </ol>
    </nav>
    <h4 class="mb-0">Reporte de Empleados por Tipo de Horario</h4>
  </div>
  <button class="btn btn-outline-primary" onclick="window.print()">
    <i class="bi bi-printer me-2"></i>Imprimir
  </button>
</div>

<!-- Resumen -->
<div class="row g-4 mb-4">
  <% tiposHorario.forEach(function(tipo) { %>
  <div class="col-md-6 col-lg-3">
    <div class="card">
      <div class="card-body text-center">
        <i class="bi bi-clock fs-1 text-primary mb-2"></i>
        <h5><%= tipo.Nombre_Horario %></h5>
        <p class="text-muted mb-1"><%= tipo.Horas_Semana ? tipo.Horas_Semana + ' hrs/semana' : 'Variable' %></p>
        <h2 class="text-primary mb-0"><%= tipo._count.empleados %></h2>
        <small class="text-muted">empleados</small>
      </div>
    </div>
  </div>
  <% }); %>
</div>

<!-- Detalle por Tipo de Horario -->
<% tiposHorario.filter(function(t) { return t.empleados.length > 0; }).forEach(function(tipo) { %>
<div class="card mb-4">
  <div class="card-header">
    <h5 class="card-title mb-0">
      <i class="bi bi-clock me-2"></i>
      <%= tipo.Nombre_Horario %>
      <span class="badge bg-primary ms-2"><%= tipo.empleados.length %> empleados</span>
      <% if (tipo.Horas_Semana) { %>
      <span class="badge bg-secondary ms-1"><%= tipo.Horas_Semana %> hrs/sem</span>
      <% } %>
    </h5>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="table-light">
          <tr>
            <th>Nombre</th>
            <th>√Årea</th>
            <th>Puesto</th>
            <th class="text-end">Horas Contratadas</th>
          </tr>
        </thead>
        <tbody>
          <% tipo.empleados.forEach(function(emp) { %>
          <tr>
            <td><%= emp.Nombre %> <%= emp.Apellido_Paterno %> <%= emp.Apellido_Materno || '' %></td>
            <td><%= emp.area ? emp.area.Nombre_Area : '-' %></td>
            <td><%= emp.puesto ? emp.puesto.Nombre_Puesto : '-' %></td>
            <td class="text-end"><%= emp.Horas_Semanales_Contratadas || '-' %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% }); %>
