<%- include('../partials/navbar') %>
<%- include('../partials/sidebar', { active: 'asistencia' }) %>

<main class="main-content">
    <div class="container-fluid py-4">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-1">
                        <li class="breadcrumb-item"><a href="/asistencia">Asistencia</a></li>
                        <li class="breadcrumb-item active"><%= empleado.Nombre %> <%= empleado.Apellido_Paterno %></li>
                    </ol>
                </nav>
                <h1 class="h3 mb-0">Asistencia de <%= empleado.Nombre %> <%= empleado.Apellido_Paterno %></h1>
            </div>
            <a href="/asistencia" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Volver
            </a>
        </div>

        <!-- Info del empleado -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-1 text-center">
                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" 
                             style="width: 60px; height: 60px;">
                            <i class="bi bi-person fs-3 text-primary"></i>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <h5 class="mb-0"><%= empleado.Nombre %> <%= empleado.Apellido_Paterno %> <%= empleado.Apellido_Materno || '' %></h5>
                        <small class="text-muted">#<%= empleado.Numero_Empleado %></small>
                    </div>
                    <div class="col-md-2">
                        <small class="text-muted d-block">Puesto</small>
                        <strong><%= empleado.Puesto?.Nombre || 'Sin asignar' %></strong>
                    </div>
                    <div class="col-md-2">
                        <small class="text-muted d-block">Área</small>
                        <strong><%= empleado.Area?.Nombre || 'Sin asignar' %></strong>
                    </div>
                    <div class="col-md-2">
                        <small class="text-muted d-block">Estatus</small>
                        <span class="badge bg-<%= empleado.Estatus?.Nombre === 'Activo' ? 'success' : 'secondary' %>">
                            <%= empleado.Estatus?.Nombre || 'N/A' %>
                        </span>
                    </div>
                    <div class="col-md-2 text-end">
                        <a href="/empleados/<%= empleado.ID_Empleado %>" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-eye me-1"></i>Ver perfil
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filtros de fecha -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <form method="GET" class="row g-3">
                    <div class="col-md-4">
                        <label for="fechaInicio" class="form-label">Fecha Inicio</label>
                        <input type="date" class="form-control" id="fechaInicio" name="fechaInicio" 
                               value="<%= fechaInicio %>">
                    </div>
                    <div class="col-md-4">
                        <label for="fechaFin" class="form-label">Fecha Fin</label>
                        <input type="date" class="form-control" id="fechaFin" name="fechaFin" 
                               value="<%= fechaFin %>">
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search me-2"></i>Consultar
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Resumen -->
        <div class="row mb-4">
            <div class="col-md-2 col-sm-4 mb-3">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body">
                        <h3 class="mb-0 text-success"><%= resumen.diasPresentes %></h3>
                        <small class="text-muted">Días Presentes</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-sm-4 mb-3">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body">
                        <h3 class="mb-0 text-danger"><%= resumen.diasAusentes %></h3>
                        <small class="text-muted">Faltas</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-sm-4 mb-3">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body">
                        <h3 class="mb-0 text-warning"><%= resumen.retardos %></h3>
                        <small class="text-muted">Retardos</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-sm-4 mb-3">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body">
                        <h3 class="mb-0 text-primary"><%= resumen.checadasCompletas %></h3>
                        <small class="text-muted">Checadas Completas</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-sm-4 mb-3">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body">
                        <h3 class="mb-0 text-info"><%= resumen.horasTrabajadas.toFixed(1) %></h3>
                        <small class="text-muted">Horas Trabajadas</small>
                    </div>
                </div>
            </div>
            <div class="col-md-2 col-sm-4 mb-3">
                <div class="card border-0 shadow-sm h-100 text-center">
                    <div class="card-body">
                        <% const cumpleBono = resumen.checadasCompletas >= 4 && resumen.diasPresentes >= 6 && resumen.diasAusentes === 0 && resumen.retardos === 0; %>
                        <h3 class="mb-0 <%= cumpleBono ? 'text-success' : 'text-danger' %>">
                            <i class="bi bi-<%= cumpleBono ? 'check-circle' : 'x-circle' %>"></i>
                        </h3>
                        <small class="text-muted">Bono Puntualidad</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Por ubicación -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white">
                        <h6 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Asistencia por Ubicación</h6>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-6">
                                <div class="border rounded p-3">
                                    <span class="badge bg-info mb-2">RAM1</span>
                                    <h4 class="mb-0"><%= resumen.porUbicacion.RAM1?.entradas || 0 %></h4>
                                    <small class="text-muted">Entradas</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="border rounded p-3">
                                    <span class="badge bg-secondary mb-2">RAM2</span>
                                    <h4 class="mb-0"><%= resumen.porUbicacion.RAM2?.entradas || 0 %></h4>
                                    <small class="text-muted">Entradas</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white">
                        <h6 class="mb-0"><i class="bi bi-clock-history me-2"></i>Minutos de Retardo</h6>
                    </div>
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <div class="text-center">
                            <h1 class="display-4 mb-0 <%= resumen.minutosRetardoTotal > 0 ? 'text-warning' : 'text-success' %>">
                                <%= resumen.minutosRetardoTotal %>
                            </h1>
                            <p class="text-muted mb-0">minutos acumulados en el período</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Detalle día por día -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h5 class="mb-0">
                    <i class="bi bi-calendar3 me-2"></i>Detalle por Día
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha</th>
                                <th>Día</th>
                                <th>Estado</th>
                                <th>Entrada</th>
                                <th>Salida</th>
                                <th>Ubicación Entrada</th>
                                <th>Ubicación Salida</th>
                                <th>Retardo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (resumen.detalle && resumen.detalle.length > 0) { %>
                                <% resumen.detalle.forEach(dia => { %>
                                    <tr class="<%= !dia.presente ? 'table-danger' : (dia.retardo ? 'table-warning' : '') %>">
                                        <td>
                                            <strong><%= new Date(dia.fecha).toLocaleDateString('es-MX') %></strong>
                                        </td>
                                        <td>
                                            <%= new Date(dia.fecha).toLocaleDateString('es-MX', { weekday: 'short' }) %>
                                        </td>
                                        <td>
                                            <% if (dia.presente) { %>
                                                <span class="badge bg-success">Presente</span>
                                            <% } else { %>
                                                <span class="badge bg-danger">Falta</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (dia.entrada) { %>
                                                <%= new Date(dia.entrada).toLocaleTimeString('es-MX', {hour: '2-digit', minute: '2-digit'}) %>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (dia.salida) { %>
                                                <%= new Date(dia.salida).toLocaleTimeString('es-MX', {hour: '2-digit', minute: '2-digit'}) %>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (dia.ubicacionEntrada) { %>
                                                <span class="badge bg-<%= dia.ubicacionEntrada === 'RAM1' ? 'info' : 'secondary' %>">
                                                    <%= dia.ubicacionEntrada %>
                                                </span>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (dia.ubicacionSalida) { %>
                                                <span class="badge bg-<%= dia.ubicacionSalida === 'RAM1' ? 'info' : 'secondary' %>">
                                                    <%= dia.ubicacionSalida %>
                                                </span>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (dia.retardo) { %>
                                                <span class="text-danger">
                                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                                    <%= dia.minutosRetardo %> min
                                                </span>
                                            <% } else if (dia.presente) { %>
                                                <span class="text-success">
                                                    <i class="bi bi-check-circle"></i>
                                                </span>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="8" class="text-center py-4 text-muted">
                                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                        No hay registros de asistencia en este período
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
